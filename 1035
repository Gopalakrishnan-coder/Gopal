package Day5;
import java.util.Scanner;
public class Day51035 {

	public static void main(String[] args) {
		        Scanner sc = new Scanner(System.in);
		        int n = sc.nextInt();
		        int a = sc.nextInt();
		        int b = sc.nextInt();

		        int result = Math.min(n - a, b + 1);
		        System.out.println(result);
		    }
		
	}


